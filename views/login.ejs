<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="module module-login span4 offset4">
                <form class="form-vertical" action="/login" method="post">
                    <div class="module-head-login">
                        <h3>Sign In</h3>
                    </div>
                    <div class="module-body">
                        <div class="alert alert alert-success" id="login_alert"></div>
                        <div class="control-group">
                            <div class="controls row-fluid">
                                <input class="span12" type="text" id="inputEmail" placeholder="Username" name="username">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls row-fluid">
                                <input class="span12" type="password" id="inputPassword" placeholder="Password" name="password">
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="controls clearfix">
                                <button type="submit" class="btn btn-success pull-right">Login</button>
                                <label class="checkbox">
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                        </div>
                        <div style="padding-top: 10px;">
                            <div class="controls clearfix">
                                <a href="#" class="pull-right">Forgot Username or Password?</a>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="module-foot">

                    <div class="control-group">
                        <!--<div class="controls clearfix">
                            <span>Don't have an account?</span>

                        </div>-->

                        <div class="controls clearfix">
                            <form action="/registerUser" method="post" class="form-horizontal" id="frmRegister">
                                <input type="hidden" name="type" id="type" value="p">
                                <span class="control-label inline ">I am </span>
                                <label class="radio inline  ">
                                    <input type="radio" name="radio_type" id="optionsRadios1" value="v" checked="checked">
                                    Veteran
                                </label>
                                <label class="radio inline ">
                                    <input type="radio" name="radio_type" id="optionsRadios2" value="d" checked="">
                                    Doctor
                                 </label>

                                <a href="#register" role="button" class="btn btn-primary" data-toggle="modal">Register</a>

                                <div id="register" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="registration" aria-hidden="true">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
                                        <h3 id="myModalLabel">Register</h3>
                                    </div>
                                    <div class="modal-body">

                                        <div class="alert alert-danger" id="reg_alert"></div>

                                        <div class="control-group">
                                            <label class="control-label" for="firstname">Display Name</label>
                                            <div class="controls">
                                                <input type="text" id="firstname" placeholder="Enter your First Name" required name="username">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label" for="email">Email Address</label>
                                            <div class="controls">
                                                <input type="email" id="email" placeholder="Enter your email address" required name="email">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label" for="password">Password</label>
                                            <div class="controls">
                                                <input type="password" id="password" required name="password">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label" for="confirm_pwd">Confirm Password</label>
                                            <div class="controls">
                                                <input type="password" id="confirm_pwd" placeholder="Re-enter your Password" required>
                                            </div>
                                        </div>

                                        <div class="control-group">
                                            <div class="controls clearfix">
                                                <button type="button" class="btn btn-primary pull-left" id="btnRegister">Register Now</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div><!--/.wrapper-->

